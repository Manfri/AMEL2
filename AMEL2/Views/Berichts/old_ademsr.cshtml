</p>
-->
@using (Html.BeginForm())
{
    <p>
        Stichwortsuche nach AKZ: @Html.TextBox("SearchString")
        <input type="submit" value="Suchen" />
        <input type="button" value="Alle anzeigen" onclick="location.href='@Url.Action("old_ademsr", "Berichts",new {sortOrder = String.Empty, searchString = "All"},null)';return false;" />
    </p>
}

<table class="table">
    <tr>
        <th>
            Index 1
        </th>
        <th>
            Index 2
        </th>
        <th>
            Index 3
        </th>
        <th>
            @Html.ActionLink("AKZ", "old_ademsr", new { sortOrder = ViewBag.s1SortParm })
        </th>
        <th>
            ID
        </th>
        <th>
            Bezeichnung
        </th>
        <th>
            Antriebsart
        </th>
        <th>
            Montageort
        </th>
        <th>
            Reparaturschalter
        </th>
        <th>
            Ex-Schutz
        </th>
        <th>
            Bemerkungen
        </th>
        <th>
            Änd-Index
        </th>     

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (item.IT == 0)
            {
                <td class="table-cell-aliceblue" colspan="2">
                    @Html.DisplayFor(modelItem => item.s1)
                </td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                
            }
            @if (item.IT != 0)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.s1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s6)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s7)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s8)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s9)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s10)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s11)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s12)
                </td>
              

            }


            <td>
                @if (item.IT != 0)
                {
                    @Html.ActionLink("Bearbeiten", "old_ademsr_edit", new { id = item.BerichtID })
                }

                <!--
                @Html.ActionLink("Details", "Details", new { id=item.BerichtID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.BerichtID })
                 -->
            </td>

        </tr>
