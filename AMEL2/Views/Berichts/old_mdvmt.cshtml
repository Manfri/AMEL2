@model IEnumerable<AMEL2.Models.Bericht>

@{
    ViewBag.Title = "Messstellendaten VMT";
}

<h2>Messstellendaten VMT</h2>
<!--
<p>
    @Html.ActionLink("Create New", "Create")
</p>
-->
@using (Html.BeginForm())
{
    <p>
        Stichwortsuche nach AKZ: @Html.TextBox("SearchString")
        <input type="submit" value="Suchen" />
        <input type="button" value="Alle anzeigen" onclick="location.href='@Url.Action("old_mdvmt", "Berichts",new {sortOrder = String.Empty, searchString = "All"},null)';return false;" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("AKZ", "old_mdvmt", new { sortOrder = ViewBag.s1SortParm })
        </th>
        <th>
            Bezeichnung
        </th>
        <th>
            Örtlichkeit
        </th>
        <th>
            Kst
        </th>
        <th>
            Flt-PLT
        </th>
        <th>
            Messprinzip
        </th>
        <th>
            Hersteller
        </th>
        <th>
            Fabrikat
        </th>
        <th>
            Typ
        </th>
        <th>
            ProzessA.
        </th>
        <th>
            Werkst.
        </th>
        <th>
            Beist.
        </th>
        <th>
            Bemerkungen
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (item.IT == 0)
            {
                <td class="table-cell-aliceblue" colspan="2">
                    @Html.DisplayFor(modelItem => item.s1)
                </td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
                <td class="table-cell-aliceblue"></td>
            }
            @if (item.IT != 0)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.s1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s6)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s7)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s8)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s9)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s10)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s11)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s12)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.s13)
                </td>                
            }


            <td>
                @if (item.IT != 0)
                {
                    @Html.ActionLink("Bearbeiten", "old_mdvmt_edit", new { id = item.BerichtID })
                }

                <!--
                @Html.ActionLink("Details", "Details", new { id=item.BerichtID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.BerichtID })
                 -->
            </td>

        </tr>
    }

</table>
